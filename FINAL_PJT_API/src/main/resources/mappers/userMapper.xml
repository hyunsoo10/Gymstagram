<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.pjt.model.dao.UserDao">
	<resultMap type="User" id="userMap">
		<result column="user_id" property="userId"/>
		<result column="user_name" property="userName"/>
		<result column="user_password" property="userPassword"/>
		<result column="nickname" property="nickName"/>
		<result column="register_date" property="registerDate"/>
		<result column="profile_image" property="profileImage"/>
		<result column="avty_code" property="avtyCode"/>
	</resultMap>
	<!-- 회원가입 시, 중복체크 유효성 검사에 사용 -->
	<select id="selectAllUser" resultMap="userMap">
		SELECT *
			FROM user
	</select>

	<!-- 로그인 할 때 사용 -->
	<select id="selectOneUser" parameterType="String" resultMap="userMap">
		SELECT *
			FROM user
			WHERE user_id = #{userId}
	</select>

	<!-- 회원 가입 -->
	<insert id="insertUser" parameterType="User">
		INSERT INTO user(user_id, user_password, user_name, nickname, profile_image)
			VALUE (#{userId}, #{userPassword}, #{userName}, #{nickName}, #{profileImage})
	</insert>

	<!-- 회원 수정 -->
	<update id="updateUser" parameterType="User">
		UPDATE user
			SET user_name = #{userName}, nickname = #{nickName}, user_password = #{userPassword}, profile_image = #{profileImage}
			WHERE user_id = #{userId}
	</update>
	
	<!-- avty코드 수정 -->
	<update id="updateAvty" parameterType="User">
		UPDATE user
			SET avty_code = #{avtyCode}
			WHERE user_id = #{userId}
	</update>

	<!-- 회원 탈퇴 -->
	<delete id="deleteUser" parameterType="String">
		DELETE FROM user
			WHERE user_id = #{userId}
	</delete>
	
	<!-- 유저 활성화/비활성화 -->
	<update id="updateUserAct" parameterType="String">
		UPDATE user
			SET activate = NOT activate
			WHERE user_id = #{userId}
	</update>
</mapper>